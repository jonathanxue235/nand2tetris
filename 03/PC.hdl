/**
 * A 16-bit counter.
 * if      reset(t): out(t+1) = 0
 * else if load(t):  out(t+1) = in(t)
 * else if inc(t):   out(t+1) = out(t) + 1
 * else              out(t+1) = out(t)
 */
CHIP PC {
    IN in[16], reset, load, inc;
    OUT out[16];
    
    PARTS:
    Mux16(a=out, b=in, sel=load, out=loadMux);
    Mux16(a=loadMux, b=incMux, sel=inc, out=incMux);
    Mux16(a=incMux, b=false, sel=reset, out=resetMux);
    Register(in=resetMux, load=true, out=out);
    Inc16(in=out, out=incMux);
    
}